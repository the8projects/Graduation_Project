<Window x:Class="ProjectApp.Source.ConfirmOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ConfirmOrder" Height="250" Width="400" WindowStyle="None" BorderBrush="#FFF18B10" BorderThickness="4" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True" Background="#FFC78F68">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Label Content="ต้องการสั่งซื้อรายการที่เลือก?" FontSize="25" Foreground="White" Margin="54,68" Grid.ColumnSpan="2" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnConfirmOrder" FontSize="20" FontWeight="Bold" Content="ยืนยัน" Margin="67,10,25,10" Grid.Row="1" Click="btnConfirmOrder_Click" Foreground="#FFD86200"/>
        <Button x:Name="btnCancel" FontSize="20" FontWeight="Bold" Content="ยกเลิก" Margin="25,10,67,10" Grid.Row="1" Grid.Column="1" Click="btnCancel_Click" Foreground="#FFD86200"/>

    </Grid>
</Window>
